<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="5dp"
    android:padding="5dp"    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/nom_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Nombre" />

        <TextView
            android:id="@+id/des_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nom_local"
            android:text="Descripcion" />

        <TextView
            android:id="@+id/dir_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/des_local"
            android:text="Direccion" />

        <TextView
            android:id="@+id/tel_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dir_local"
            android:text="Telefono" />

        <TextView
            android:id="@+id/txt_actualizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="Actializado" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_actualizado"
            android:layout_toLeftOf="@+id/num_calidad"
            android:text="Calidad" />

        <TextView
            android:id="@+id/num_calidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_actualizado"
            android:layout_alignParentRight="true"
            android:text="1" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/num_calidad"
            android:layout_toLeftOf="@+id/num_atencion"
            android:text="Atencion" />

        <TextView
            android:id="@+id/num_atencion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/num_calidad"
            android:layout_alignParentRight="true"
            android:text="1" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt2"
            android:layout_toLeftOf="@+id/num_precio"
            android:text="Precio" />

        <TextView
            android:id="@+id/num_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/num_atencion"
            android:layout_alignParentRight="true"
            android:text="0" />


    </RelativeLayout>



</android.support.v7.widget.CardView>